{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "format": "prettier --check \"src/**/*.{ts,js,json}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,js,json}\"",
    "test": "jest",
    "test:api-mocked": "jest --selectProjects=api-mocked",
    "test:api-unmocked": "jest --selectProjects=api-unmocked",
    "test:unit": "jest --selectProjects=unit",
    "test:api": "jest --selectProjects=api-mocked api-unmocked",
    "test:watch": "jest --watch",
    "test:watch:api-mocked": "jest --selectProjects=api-mocked --watch",
    "test:watch:api-unmocked": "jest --selectProjects=api-unmocked --watch",
    "test:watch:unit": "jest --selectProjects=unit --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:api-mocked": "jest --selectProjects=api-mocked --coverage",
    "test:coverage:api-unmocked": "jest --selectProjects=api-unmocked --coverage",
    "test:coverage:unit": "jest --selectProjects=unit --coverage",
    "test:coverage:api": "jest --selectProjects=api-mocked api-unmocked --coverage",
    "test:verbose": "jest --verbose"
  },
  "author": "",
  "license": "ISC",
  "description": "TypeScript backend project",
  "dependencies": {
    "axios": "^1.12.2",
    "dotenv": "^17.2.1",
    "express": "^4.18.0",
    "firebase-admin": "^13.5.0",
    "google-auth-library": "^10.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.2.3",
    "nodemon": "^3.0.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.0",
    "typescript": "^5.9.3"
  }
}
