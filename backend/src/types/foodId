import { z } from "zod";

// Request body schema
export const aiFoodRequestSchema = z.object({
  prompt: z.string().optional(),
  imageBase64: z
    .string()
    .min(10, "Base64 image data is required")
    .describe("Base64 encoded image string (without data URI prefix)"),
});

export type AiFoodRequestBody = z.infer<typeof aiFoodRequestSchema>;
